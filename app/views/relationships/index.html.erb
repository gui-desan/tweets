<div class="row">
  <div class="col">
    <h1>Relationship requests</h1>
    <br>
    <% if @requests.empty? %>
      No request
    <% else %>
      <% @requests.each do |request| %>
        <div class="d-flex align-items-center">
          <%= "#{request.requester.name} wants to become your #{request.relationship_type}." %>
          <%= link_to "Accept", relationships_accept_path(request.id), method: :post, class: "btn btn-link ml-3" %>
          <%= link_to "Reject", relationships_reject_path(request.id), method: :delete, class: "btn btn-link text-danger" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
